<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ProfileImage"
        android:layout_width="@dimen/_30mdp"
        android:layout_height="@dimen/_30mdp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/anik"
        app:civ_border_color="@color/orange"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/ProfileImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#E1E8ED"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@+id/ProfileImage"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/CommentId"
            android:layout_width="wrap_content"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="@+id/CommentName"
            app:layout_constraintTop_toBottomOf="@+id/CommentName"
            android:textColor="@color/black"
            android:textSize="@dimen/_14font_mdp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/TimeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="@+id/CommentName"
            app:layout_constraintTop_toBottomOf="@+id/CommentId" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>